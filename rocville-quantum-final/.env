# Server Configuration
PORT=5000
NODE_ENV=production
HOST=0.0.0.0

# Frontend URL for CORS
FRONTEND_URL=https://rocville-quantum.yourdomain.com

# Database Configuration
MONGODB_URI=mongodb://rocville-db:27017/rocville-prod

# Authentication
JWT_SECRET=your-production-jwt-secret-key-min-32-chars
JWT_EXPIRY=24h

# Logging
LOG_LEVEL=info

# AI Configuration
OPENAI_API_KEY=your-production-openai-api-key
OPENAI_MODEL=gpt-4
AI_FALLBACK_MODEL=gpt-3.5-turbo

# External Service API Keys
FINNHUB_API_KEY=your-production-finnhub-api-key
CUBE_GLOBAL_API_KEY=your-production-cube-global-api-key
TAXJAR_API_KEY=your-production-taxjar-api-key

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
STRICT_RATE_LIMIT_WINDOW_MS=60000
STRICT_RATE_LIMIT_MAX_REQUESTS=5

# WhatsApp Integration
WHATSAPP_API_KEY=your-production-whatsapp-api-key
WHATSAPP_PHONE_NUMBER=your-production-whatsapp-number

# Email Configuration
SMTP_HOST=smtp.provider.com
SMTP_PORT=587
SMTP_USER=your-production-smtp-username
SMTP_PASS=your-production-smtp-password
EMAIL_FROM=noreply@rocville-quantum.com

# Blockchain Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-production-project-id
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
OPTIMISM_RPC_URL=https://mainnet.optimism.io

# Monitoring
SENTRY_DSN=your-production-sentry-dsn
APM_SERVICE_NAME=rocville-quantum-prod

# Redis Cache
REDIS_URL=redis://rocville-redis:6379
